---
interface Props {
  variant?: 'default' | 'glass' | 'glow';
  hover?: boolean;
  className?: string;
  as?: 'div' | 'article' | 'section';
}

const {
  variant = 'default',
  hover = false,
  className = '',
  as: Tag = 'div',
} = Astro.props;

const variantClasses: Record<NonNullable<Props['variant']>, string> = {
  default: 'bg-background-secondary border border-steel-800/30',
  glass: 'glass-card',
  glow: 'bg-background-secondary glow-border',
};

const classes = `
  ${variantClasses[variant as NonNullable<Props['variant']>]}
  ${hover ? 'card-hover' : ''}
  rounded-lg p-6 md:p-8
  ${className}
`;
---

<Tag class={classes}>
  <slot />
</Tag>
