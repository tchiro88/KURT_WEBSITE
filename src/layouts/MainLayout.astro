---
import BaseLayout from './BaseLayout.astro';
import Header from '@/components/layout/Header.astro';
import Footer from '@/components/layout/Footer.astro';

interface Props {
  title?: string;
  description?: string;
  keywords?: string[];
  ogImage?: string;
  canonical?: string;
}

const props = Astro.props;
---

<BaseLayout {...props}>
  <Header />

  <main class="pt-20 md:pt-24">
    <slot />
  </main>

  <Footer />
</BaseLayout>
